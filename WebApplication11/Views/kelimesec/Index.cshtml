      gap: 25px;
      margin-top: 20px;
    }
    .image-container {
      width: 220px;
      height: 220px;
      border: 3px solid #ccc;
      border-radius: 16px;
      overflow: hidden;
      cursor: pointer;
      transition: transform 0.3s, box-shadow 0.3s;
    }
    .image-container:hover {
      transform: scale(1.05);
      box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
    }
    .image-container img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
    #message {
      margin-top: 30px;
      font-size: 1.8em;
      color: #2980b9;
      font-weight: bold;
    }
  </style>
</head>
<body>
  <h1>DoÄŸru Resmi SeÃ§</h1>
  <div id="score">Puan: 0</div>
  <div id="timer">SÃ¼re: 60</div>
  <div id="word"></div>
  <div class="images" id="images"></div>
  <div id="message"></div>

  <script>
    const words = ["masa", "otobÃ¼s", "ÅŸapka", "itfaiyeci", "elma", "fil", "gemi", "at", "asker", "kitap"];
    const images = {
      masa: "/images/words/table.png",
      otobÃ¼s: "/images/words/bus.jpeg",
      ÅŸapka: "/images/words/hat.jpeg",
      itfaiyeci: "/images/words/firefighter.jpeg",
      elma: "/images/words/apple.jpeg",
      fil: "/images/words/elephant.jpeg",
      gemi: "/images/words/ship.jpeg",
      at: "/images/words/horse.jpeg",
      asker: "/images/words/soldier.jpeg",
      kitap: "/images/words/Book.jpeg"
    };

    let currentWordIndex = 0;
    let score = 0;
    let time = 60;
    let timerInterval;

    const wordDiv = document.getElementById("word");
    const imagesDiv = document.getElementById("images");
    const scoreDiv = document.getElementById("score");
    const timerDiv = document.getElementById("timer");
    const messageDiv = document.getElementById("message");

    function shuffle(array) {
      for (let i = array.length - 1; i > 0; i--) {
        const j = Math.floor(Math.random() * (i + 1));
        [array[i], array[j]] = [array[j], array[i]];
      }
      return array;
    }

    function updateScore() {
      scoreDiv.textContent = `Puan: ${score}`;
    }

    function updateTimer() {
      timerDiv.textContent = `SÃ¼re: ${time}`;
    }

    function endGame(message) {
      clearInterval(timerInterval);
      wordDiv.textContent = "";
      imagesDiv.innerHTML = "";
      timerDiv.textContent = "";
      messageDiv.textContent = message;
    }

    function showNextWord() {
      if (currentWordIndex >= words.length || time <= 0) {
        if (score >= 70) {
          endGame("BaÅŸarÄ±lÄ± oldunuz! ðŸŽ‰");
        } else {
          endGame("BaÅŸarÄ±sÄ±z oldunuz. ðŸ˜ž");
        }
        return;
      }

      const word = words[currentWordIndex];
      wordDiv.textContent = `Kelime: ${word}`;
      const options = [word];
      const otherWords = words.filter(w => w !== word);
      shuffle(otherWords);
      options.push(...otherWords.slice(0, 4));
      shuffle(options);

      imagesDiv.innerHTML = "";
      options.forEach(opt => {
        const container = document.createElement("div");
        container.className = "image-container";

        const img = document.createElement("img");
        img.src = images[opt];
        img.alt = opt;

        container.onclick = () => {
          if (opt === word) {
            score += 10;
            currentWordIndex++;
            updateScore();
            showNextWord();
          } else {
            score -= 10;
            updateScore();
            container.style.borderColor = "red";
          }
        };

        container.appendChild(img);
        imagesDiv.appendChild(container);
      });
    }

    function startTimer() {
      updateTimer();
      timerInterval = setInterval(() => {
        time--;
        updateTimer();
        if (time <= 0) {
          if (score >= 70) {
            endGame("BaÅŸarÄ±lÄ± oldunuz! ðŸŽ‰");
          } else {
            endGame("BaÅŸarÄ±sÄ±z oldunuz. ðŸ˜ž");
          }
        }
      }, 1000);
    }

    updateScore();
    startTimer();
    showNextWord();
  </script>
</body>
