<!DOCTYPE html>
<html lang="tr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Doğru Resmi Seç</title>
  <style>
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      text-align: center;
      background: linear-gradient(to right, #ece9e6, #ffffff);
      padding: 50px;
    }
    h1 {
      color: #2c3e50;
      font-size: 2.5em;
      margin-bottom: 20px;
    }
    #word {
      font-size: 2em;
      margin: 20px;
      color: #34495e;
    }
    .images {
      display: flex;
      justify-content: center;
      flex-wrap: wrap;
      gap: 20px;
      margin-top: 30px;
    }
    .image-container {
      width: 150px;
      height: 150px;
      border: 2px solid #ccc;
      border-radius: 12px;
      overflow: hidden;
      cursor: pointer;
      transition: transform 0.2s, box-shadow 0.2s;
    }
    .image-container:hover {
      transform: scale(1.05);
      box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }
    .image-container img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
  </style>
</head>
<body>
  <h1>Doğru Resmi Seç</h1>
  <div id="word"></div>
  <div class="images" id="images"></div>

  <script>
    const words = [
      "masa", "otobüs", "şapka", "itfaiyeci", "elma",
      "fil", "gemi", "at", "asker", "kitap"
    ];

    const images = {
      masa: "https://upload.wikimedia.org/wikipedia/commons/thumb/0/01/Table.jpg/320px-Table.jpg",
      otobüs: "https://upload.wikimedia.org/wikipedia/commons/thumb/7/7d/City_bus.jpg/320px-City_bus.jpg",
      şapka: "https://upload.wikimedia.org/wikipedia/commons/thumb/8/8d/Hat.jpg/320px-Hat.jpg",
      itfaiyeci: "https://upload.wikimedia.org/wikipedia/commons/thumb/9/90/Firefighter.jpg/320px-Firefighter.jpg",
      elma: "https://upload.wikimedia.org/wikipedia/commons/thumb/1/15/Red_Apple.jpg/320px-Red_Apple.jpg",
      fil: "https://upload.wikimedia.org/wikipedia/commons/thumb/6/63/African_elephant_warning_raised_trunk.jpg/320px-African_elephant_warning_raised_trunk.jpg",
      gemi: "https://upload.wikimedia.org/wikipedia/commons/thumb/b/bf/Cargo_ship.jpg/320px-Cargo_ship.jpg",
      at: "https://upload.wikimedia.org/wikipedia/commons/thumb/d/d5/Horse_in_field.jpg/320px-Horse_in_field.jpg",
      asker: "https://upload.wikimedia.org/wikipedia/commons/thumb/3/36/Soldiers.jpg/320px-Soldiers.jpg",
      kitap: "https://upload.wikimedia.org/wikipedia/commons/thumb/2/2e/Books.jpg/320px-Books.jpg"
    };

    const wordDiv = document.getElementById("word");
    const imagesDiv = document.getElementById("images");

    let currentWordIndex = 0;

    function shuffle(array) {
      for (let i = array.length - 1; i > 0; i--) {
        const j = Math.floor(Math.random() * (i + 1));
        [array[i], array[j]] = [array[j], array[i]];
      }
      return array;
    }

    function showNextWord() {
      if (currentWordIndex >= words.length) {
        wordDiv.textContent = "Tebrikler! Tüm kelimeleri tamamladınız.";
        imagesDiv.innerHTML = "";
        return;
      }

      const word = words[currentWordIndex];
      wordDiv.textContent = `Kelime: ${word}`;

      const options = [word];
      const otherWords = words.filter(w => w !== word);
      shuffle(otherWords);
      options.push(...otherWords.slice(0, 4));
      shuffle(options);

      imagesDiv.innerHTML = "";

      options.forEach(opt => {
        const container = document.createElement("div");
        container.className = "image-container";

        const img = document.createElement("img");
        img.src = images[opt];
        img.alt = opt;

        container.onclick = () => {
          if (opt === word) {
            currentWordIndex++;
            showNextWord();
          } else {
            container.style.borderColor = "red";
          }
        };

        container.appendChild(img);
        imagesDiv.appendChild(container);
      });
    }

    showNextWord();
  </script>
</body>
</html>